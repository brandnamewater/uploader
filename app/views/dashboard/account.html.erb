Shout<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <!--     Fonts and icons     -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" />
    <!-- CSS Files -->
</head>

<body>
    <div class="wrapper">
        <div class="sidebar" data-image=" ">
            <!--
        Tip 1: You can change the color of the sidebar using: data-color="purple | blue | green | orange | red"

        Tip 2: you can also add an image using data-image tag
    -->
            <div class="sidebar-wrapper">
                <div class="logo">
                    <a href="/dashboard" class="simple-text">
                      SHOUTStv

                    </a>
                </div>
                <ul class="nav">
                  <% if current_user.seller || current_user.try(:admin?) %>
                    <li>
                        <a class="nav-link" href="/dashboard">
                            <i class="nc-icon nc-chart-pie-35"></i>
                            <p>Dashboard</p>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" href="/yoyo">
                            <i class="nc-icon nc-circle-09"></i>
                            <p>Shouts</p>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" href="/seller">
                            <i class="nc-icon nc-notes"></i>
                            <p>Manage Listing(s)</p>
                        </a>
                    </li>
                    <% end %>
                    <li>
                        <a class="nav-link" href="/purchases">
                            <i class="nc-icon nc-paper-2"></i>
                            <p>Purchases</p>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" href="/users/edit">
                            <i class="nc-icon nc-paper-2"></i>
                            <p>User</p>
                        </a>
                    </li>
                  <% if current_user.seller || current_user.try(:admin?) %>
                    <li class="nav-item active">
                        <a class="nav-link" href="/account">
                            <i class="nc-icon nc-paper-2"></i>
                            <p>Payment</p>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" href="/settings">
                            <i class="nc-icon nc-paper-2"></i>
                            <p>Settings</p>
                        </a>
                    </li>
                    <% end %>
                </ul>
            </div>
        </div>

        <% if user_signed_in? || current_user.try(:admin?) %>

        <div class="main-panel">
            <div class="content">
                <div class="container-fluid">

                  <div class="row">
                      <div class="col-md-4">
                          <div class="card ">
                              <div class="card-header ">
                                  <h4 class="card-title">Pending Balance</h4>
                                  <p class="card-category">The balance has yet to be paid to you</p>
                              </div>
                              <div class="card-body ">
                                <% @balance.pending.each do |balance| %>
                                    <h1><%= number_to_currency(balance["amount"] / 100.0 )  %></h1>
                                <% end %>
                              </div>
                          </div>
                      </div>
                      <div class="col-md-4">
                         <div class="card ">
                             <div class="card-header ">
                                 <h4 class="card-title">Sent Balance</h4>
                                 <p class="card-category">The balance has been paid to you and successfully settled to your bank</p>
                             </div>
                             <div class="card-body ">
                             <% @balance.pending.each do |balance| %>
                                  <h1><%= balance["amount"]  %></h1>
                             <% end %>
                             </div>
                         </div>
                      </div>
                      <div class="col-md-4">
                         <div class="card ">
                             <div class="card-header ">
                                <h4 class="card-title">Total Profit</h4>
                                <p class="card-category">Your total profit (pending+settled)</p>
                             </div>
                         <div class="card-body ">
                         <% @balance.pending.each do |balance| %>
                              <h1><%= number_to_currency(balance["amount"] / 100.0 )  %></h1>
                         <% end %>
                         </div>
                      </div>
                  </div>
                      <div class="col-md-8">
                          <div class="card ">
                              <div class="card-header ">
                                 <h4 class="card-title">Monthly Payouts</h4>
                                 <p class="card-category">Track your performance here.</p>
                              </div>
                              <div class="card-body ">
                                  <table class="table table-bordered table-striped table-hover">
                                      <thead>
                                          <tr>
                                              <th>Currency</th>
                                              <th>Amount</th>
                                              <th>Card</th>
                                          </tr>
                                      </thead>
                                      <tbody>
                                      <% @balance.pending.each do |balance| %>
                                          <tr>
                                              <td><%= as_table_row(balance["currency"]) %></td>
                                              <td><%= number_to_currency(as_table_row(balance["amount"] / 100.00 )) %></td>
                                              <td><%= as_table_row(balance["source_types"]["card"]) %></td>
                                          </tr>
                                      <% end %>
                                      <% @balance.available.each do |balance| %>
                                          <tr>
                                              <td><%= as_table_row(balance["amount"]) %></td>
                                          </tr>
                                      <% end %>
                                      </tbody>
                                  </table>
                              </div>
                          </div>
                      </div>
                      <div class="col-md-4">
                          <div class="card ">
                              <div class="card-header ">
                                  <h4 class="card-title">Transfer </h4>
                                  <p class="card-category">Past 10 pending and completed settlements</p>
                              </div>
                              <div class="card-body ">
                                  <table class="table table-bordered table-striped table-hover">
                                      <thead>
                                          <tr>
                                              <th>Currency</th>
                                              <th>Amount</th>
                                          </tr>
                                      </thead>
                                      <tbody>
                                      <% @transfer.each do |transfer| %>
                                          <tr>
                                              <td><%= as_table_row_transfer(transfer["currency"]) %></td>
                                              <td><%= as_table_row_transfer(transfer["amount"]) %></td>
                                              <td><%= as_table_row_transfer(Time.at(transfer["created"]).strftime('%Y-%m-%d')) %></td>
                                          </tr>
                                      <% end %>
                                      </tbody>
                                  </table>
                              </div>
                          </div>
                      </div>
                      <div class="col-md-4">
                          <div class="card ">
                              <div class="card-header ">
                                  <h4 class="card-title">Scheduled Payouts</h4>
                                  <p class="card-category">Your scheduled payouts</p>
                              </div>
                              <div class="card-body ">
                                <table class="table table-bordered table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>Currency</th>
                                            <th>Amount</th>
                                            <th>Type</th>
                                            <th>Available On</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% @transaction.data.each do |transaction| %>
                                            <tr>
                                                <td><%= as_table_row_transaction(transaction["currency"]).upcase %></td>
                                                <td><%= number_to_currency(as_table_row_transaction(transaction["amount"] / 100.00 )) %></td>
                                                <td><%= as_table_row_transaction(transaction["type"]) %></td>
                                                <td><%= as_table_row_transaction(Time.at(transaction["available_on"]).strftime('%Y-%m-%d')) %></td>
                                            </tr>
                                        <% end %>
                                        <!-- <%= @transaction %> -->
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card ">
                            <div class="card-header ">
                                <h4 class="card-title">Payouts</h4>
                                <p class="card-category">Your past payouts</p>
                            </div>
                            <div class="card-body ">
                              <table class="table table-bordered table-striped table-hover">
                                  <thead>
                                      <tr>
                                          <th>Currency</th>
                                          <th>Amount</th>
                                          <th>Deposited</th>
                                      </tr>
                                  </thead>
                                  <tbody>
                                      <% @payouts.each do |payout| %>
                                          <tr>
                                              <!-- <td><%= link_to "View Details" , payout_destination_path(payout.destination) %></td> -->
                                              <td><%= as_table_row_payout(payout["currency"]) %></td>
                                              <td><%= number_to_currency(as_table_row_payout(payout["amount"] / 100.00 )) %></td>
                                              <td><%= as_table_row_payout(Time.at(payout["arrival_date"]).strftime('%Y-%m-%d')) %></td>

                                          </tr>
                                      <% end %>
                                  </tbody>
                              </table>
                            </div>
                            <div class="card-footer ">
                                <hr>
                                <div class="stats">
                                    <p><i class="fa fa-check"></i>View Payout Schedule</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12">
                      <div class="card ">
                          <div class="card-header ">
                              <h4 class="card-title">Payments</h4>
                              <p class="card-category">All payments from your Shouts</p>
                          </div>
                          <div class="card-body ">
                            <table class="table table-bordered table-striped table-hover">
                              <thead>
                                <tr>
                                  <th>Amount</th>
                                  <th>Date</th>

                                </tr>
                              </thead>
                              <tbody>
                                <% @payments.each do |payment| %>
                                  <tr>
                                    <td><%= link_to payment.source_transfer.source_transaction %></td>
                                    <td><%= number_to_currency(as_table_row_payment(payment["amount"] / 100.0)) %></td>
                                    <td><%= as_table_row_payment(Time.at(payment["created"]).strftime('%Y-%m-%d')) %></td>
                                    <td class="text-center">
                                    </td>
                                  </tr>
                                <% end %>
                              </tbody>
                            </table>
                        </div>
                      </div>

            </div>
        </div>
    </div>
   <% end %>
</body>

<script type="text/javascript">
        var baseOptions = {
          maintainAspectRatio: false,
          animation: false
          };
</script>

</html>
