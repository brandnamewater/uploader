                <div class="container-fluid">
                    <div class="row">

                      <div class="col-md-6">
                          <div class="card">
                            <div class="card-min-height-50vh">

                              <div class="card-header ">
                                  <h4 class="card-title">Order Intel</h4>
                                  <p class="card-category"></p>
                              </div>
                              <div class="card-body table-full-width table-responsive">
                                <div class="padding_5">

                                <p id="notice"><%= notice %></p>

                                <p>
                                  <strong>Name</strong>(Who it's for)<strong>:</strong>
                                  <%= @order.name %>
                                </p>

                                <p>
                                  <strong>Description:</strong>
                                  <%= @order.description %>
                                </p>

                                <% if @order.order_status == "cancelled" %>
                                  cancelled
                                  <% elsif @order.video.present? %>
                                    <i class="fa fa-times" aria-hidden="true" style="color:grey"></i>
                                      <% else %>
                                      Don't like this request? You can cancel it:
                                        <%= form_for @order, remote: true do |f| %>
                                        <%= f.hidden_field :order_status, value: "cancelled" %>
                                        <!-- <%= f.button type:'submit', data: {confirm: "Are you sure you want to cancel this order? You cannot undo this"}, class: "btn btn-danger", onclick: "refreshPage()" do %> -->
                                        <i class="fa fa-times" aria-hidden="true"></i>

                                        <%= link_to 'X', "javascript:void(0)", 'data-target': "#myModal-3", 'data-toggle': "modal" %>
                                    <% end %>
                                    <% end %>
                                    <% end %>


                              </div>
                            </div>
                              </div>
                          </div>
