    -->
            <div class="sidebar-wrapper">
                <div class="logo">
                    <a href="/dashboard" class="simple-text">
                      yoyo.tv

                    </a>
                </div>
                <ul class="nav">
                <li>
                        <a class="nav-link" href="/dashboard">
                            <i class="nc-icon nc-chart-pie-35"></i>
                            <p>Dashboard</p>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" href="/yoyo">
                            <i class="nc-icon nc-circle-09"></i>
                            <p>yoyo</p>
                        </a>
                    </li>
                    <li>
                      <li class="nav-item active">
                        <a class="nav-link" href="/seller">
                            <i class="nc-icon nc-notes"></i>
                            <p>Manage Listing(s)</p>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" href="/users/edit">
                            <i class="nc-icon nc-paper-2"></i>
                            <p>User</p>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link">
                            <i class="nc-icon nc-paper-2"></i>
                            <p>Settings</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="main-panel">
            <!-- Navbar -->

            <!-- End Navbar -->
            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card scroll">
                                <div class="card-header ">
                                    <h4 class="card-title">Your Listing(s)</h4>
                                    <p class="card-category">Edit or update your listing(s) information here</p>
                                </div>
                                <div class="card-body ">
                                  <div data-spy="scroll" data-offset="0">


                                    <% if (user_signed_in?) %>
                                      <%= link_to 'New Listing', new_listing_path %>
                                    <% end %>


                                    </head>

                                    <body>



                                      <table class="table table-hover">
                                        <thead>
                                          <tr>
                                            <th class="center">Talent Name</th>
                                            <th class="center">Description</th>
                                            <th class="center">Price</th>
                                            <th class="center">Action</th>
                                          </tr>
                                        </thead>
                                        <% @listings.each do |listing| %>
                                          <tbody>
                                            <tr>
                                            <td class="center"><%= listing.name %></td>
                                            <td class="center"><%= listing.description %></td>
                                            <td class="center"><%= number_to_currency(listing.price) %></td>
                                            <td class="center">
                                              <div class="btn-group">
                                                <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                                                  Action
                                                </button>
                                                <ul class="dropdown-menu" role="menu">
                                                  <li><%= link_to 'View', listing, class: "btn btn-link" %></li>
                                                  <li><%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-link" %></li>
                                                  <li><%= link_to 'Destroy', listing, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-link" %></li>
                                                </ul>
                                              </div>
                                            </td>
                                          </tr>
                                          <% end %>
                                        </tbody>
                                      </table>
                                    </body>
                                    </html>
                            </div>
                        </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
          </div>

        </div>
    </div>

</body>



</html>
